.custorm-search-icon:hover{
  i.q-icon{
    color:#2D98FC!important;
  }
}

.custorm-search-icon{
  .q-input-target, .q-input-shadow{
    font-size: 12px;
    color: #ffffff;
  }
  i.q-icon{
    widows 24px;
    height: 24px;
    color: #ACACAC!important;
    margin-right: 0px;
    align-self: auto;
    display: inline-block!important;
  }
}

.custorm-select{
  height: 29px;
  padding-left: 19px;
  padding-right: 13px; 
  .q-if-inner{
    .q-input-target, .q-input-shadow{
    color:#9DA0B5;
    font-size: 14px;
    }
  }
  i.q-if-control{
    color: #9DA0B5!important;
  }
}

.q-popover{
  background: #000000!important;
  .q-list{
    padding: 0;
    border:1px solid rgba(157,160,181,1);
    border-radius:4px;
    .q-item{
      background: #000000!important;
      color: #9DA0B5;
      text-align: center;
    }
    .q-select-highlight{
      color: #2D98FC;
      background: #000000;
    }
  }
}

.custom-breadcrumbs-a{
  a:hover{
    color: #2D98FC!important;
  }
  a{
    color:#6A737D!important;
    font-size: 16px;
    font-weight: 400;
    cursor: pointer;
  }
}

.table-desktop{
   tr{
     td{
       font-size: 16px;
       color: #6A737D;
       padding: 10px 15px;
       border-color: #eaeaea!important;
     }
    td:nth-child(1){
      padding-left: 0;
    }
    td:nth-child(2){
      white-space: normal;
      word-wrap: break-word;
      word-break: break-all;
    }
  }
}

.table-mobile{
   tr{
     td{
       font-size: 12px;
       color: #6A737D;
       padding: 10px 0;
       border-color: #eaeaea!important;
     }
    td:nth-child(1){
      border-color: #eaeaea;
    }
    td:nth-child(2){
      text-align: right;
      white-space: normal;
      word-wrap: break-word;
      word-break: break-all;
    }
  }
}

.table-thead-border-top{
  .q-table-grid .q-table thead {
  border: 1px solid #E0E1E5;
  border-top: none;
  }
}

.custorm-page-desktop{
  .q-btn:hover{
    background: #2D98FC;
    color:#ffffff;
    border-color: #18CE90;
  }
  .q-btn{
    font-size: 14px;
    margin: 0 5px;
    border: 1px solid #E0E1E5;
    min-height:30px;
    min-width: 30px!important;
    border-radius: 3px;
    padding: 0 3px!important;
  }
  .q-btn-flat{
    border-color: #E0E1E5!important;
  }
  .q-focusable{
     border-color: transparent;
  }
}

.custorm-page-mobile{
  .q-btn:hover{
    background: #2D98FC;
    color:#ffffff;
    border-color: #2D98FC;
  }
  .q-btn{
    font-size: 12px;
    margin: 0 3px;
    border: 1px solid #E0E1E5;
    min-height:15px;
    min-width: 15px!important;
    border-radius: 3px;
    padding: 0 3px!important;
  }
  .q-btn-flat{
    border-color: #E0E1E5!important;
  }
  .q-focusable{
     border-color: transparent;
  }
}

.custorm-thead{
  .q-table thead{
    border: 1px solid #E0E1E5;
    border-bottom: none;
  }
}