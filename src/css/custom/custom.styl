.custom-search-icon-desktop:hover,.custom-search-icon-mobile:hover{
  i.q-icon{
    color:#2D98FC!important;
  }
}

.custom-search-icon-desktop{
  .q-input-target, .q-input-shadow{
    font-size: 12px;
    color: #ffffff;
  }
  i.q-icon{
    // widows 24px;
    height: 14px;
    color: #ACACAC!important;
    margin-right: 0px;
    align-self: auto;
    display: inline-block!important;
    margin-bottom: 11px;
  }
}

.custom-search-icon-mobile{
  .q-input-target, .q-input-shadow{
    font-size: 12px;
    color: #ffffff;
  }
  i.q-icon{
    // widows 24px;
    height: 14px;
    color: #ACACAC!important;
    margin-right: 0px;
    align-self: auto;
    display: inline-block!important;
    margin-bottom: 9px;
  }
}

.custom-select{
  height: 29px;
  padding-left: 19px;
  padding-right: 13px; 
  .q-if-inner{
    .q-input-target, .q-input-shadow{
    color:#9DA0B5;
    font-size: 14px;
    }
  }
  i.q-if-control{
    color: #9DA0B5!important;
  }
}

.q-popover{
  border: 1px solid #9da0b5;
  border-radius: 4px;
}
.q-popover{
  background: #202126!important;
  margin-top: 20px;
  .q-list{
    padding: 0;
    border:1px solid rgba(157,160,181,1);
    border-radius:4px;
    .q-item{
      background: #202126!important;
      color: #9DA0B5;
      text-align: center;
    }
    .q-select-highlight{
      color: #2D98FC;
      background: #202126;
    }
  }
}

.custom-breadcrumbs-a{
  div{
    color:#6A737D!important;
    font-weight: 400;
  }
  a:hover{
    color: #2D98FC!important;
  }
  a{
    color:#6A737D!important;
    // font-size: 16px;
    font-weight: 400;
    cursor: pointer;
  }
}

.table-desktop{
   tr{
     td{
       font-size: 16px;
       color: #6A737D;
       padding: 10px 15px;
       border-color: #eaeaea!important;
     }
    td:nth-child(1){
      padding-left: 15px;
    }
    td:nth-child(2){
      white-space: normal;
      word-wrap: break-word;
      word-break: break-all;
    }
  }
}

.table-mobile{
   tr{
     td{
       font-size: 15px;
       color: #6A737D;
       padding:9px 5px;
       border-color: #eaeaea!important;
     }
    td:nth-child(1){
      border-color: #eaeaea;
    }
    td:nth-child(2){
      text-align: right;
      white-space: normal;
      word-wrap: break-word;
      word-break: break-all;
    }
  }
}

.table-thead-border-top{
  .q-table-grid .q-table thead {
  border: 1px solid #E0E1E5;
  border-top: none;
  }
}

.custom-page-desktop{
  .q-btn:hover{
    background: #2D98FC;
    color:#ffffff;
    border-color: #18CE90;
  }
  .q-btn{
    font-size: 14px;
    margin: 0 5px;
    border: 1px solid #E0E1E5;
    min-height:30px;
    min-width: 30px!important;
    border-radius: 3px;
    padding: 0 3px!important;
    font-weight: 400;
    color:#6A737D;
  }
  .q-btn-flat{
    border-color: #E0E1E5!important;
  }
  .q-focusable{
     border-color: transparent;
  }
}

.custom-page-mobile{
  .q-btn:hover{
    background: #2D98FC;
    color:#ffffff;
    border-color: #2D98FC;
  }
  .q-btn{
    font-size: 12px;
    margin: 0 3px;
    border: 1px solid #E0E1E5;
    min-height:18px!important;
    min-width: 18px!important;
    border-radius: 3px;
    padding: 0px!important;
    font-weight: 400;
    color:#6A737D;
  }
  .q-btn-flat{
    border-color: #E0E1E5!important;
  }
  .q-focusable{
     border-color: transparent;
  }
}

.custom-thead{
  .q-table thead{
    border: 1px solid #E0E1E5;
    border-bottom: none;
  }
}

.custom-tr-border{
  tr{
    border-left: none!important;
    border-right: none!important;
  }
  .table-bottom-container{
    border:none!important;
  }
}

.table-top-border{
  th{
    color:#6a737d;
  }
  td{
    border:1px solid #E0E1E5;
    span{
      color:#6a737d;
    }
  }
}

.custom-page-select-desktop{
  .q-input-target, .q-input-shadow{
    color:#6a737d;
    font-size: 16px;
  }
}

.custom-page-select-mobile{
  .q-input-target, .q-input-shadow{
    color:#6a737d;
    font-size: 14px;
  }
}

.custom-chip{
    display: flex;
    justify-content: flex-end;
    align-items: center;
    border:none!important;
  .q-chip{
    background: #2D98FC;
    min-height:0!important;
    height 22px;
    padding: 0 10px;
  }
}

.qr-container{
  .modal-content{
  border-radius:3px;
  }
  button:hover{
    color: #FFFFFF;
    background: #066dcd!important;
  }
  button{
    cursor: pointer;
  }
}

.custom-drawer{
  .q-layout-drawer-left.fixed{
    border:none;
  }
}

.qr-container-desktop {
  padding-bottom: 10px !important;
}

.qr-container-mobile {
  padding-bottom: 27px !important;
  padding-top: 0px!important;
}

.custom-qr{
  .modal-buttons{
    padding: 0!important;
  }
  .modal-body{
    padding 30px 0px;
    overflow: hidden;
  }
}